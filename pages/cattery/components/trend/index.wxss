.trend-list {
  padding: 30rpx 0;
  border-bottom: 2rpx solid #fafafa;
}

.trend-title {
  font-size: 26rpx;
  color: #333333;
  line-height: 40rpx;
}

.trend-img-content {
  margin: 20rpx 0 0;
}

.trend-img {
  width: calc((100% - 28rpx) / 3);
  height: 180rpx;
  margin-right: 14rpx;
  margin-bottom: 20rpx;
  border-radius: 10rpx 10rpx 10rpx 10rpx;
  display: inline-block;
}

.trend-img:nth-child(3n + 3) {
  margin-right: 0;
}

.trend-date {
  font-size: 24rpx;
  color: #bfbfbf;
}

.trend-bottom {
  margin-top: 20rpx;
  display: flex;
  font-size: 24rpx;
  color: #bfbfbf;
  justify-content: space-between;
}

.delete-img {
  width: 32rpx;
  height: 28rpx;
}

.video {
  width: 100%;
  margin: 20rpx 0;
}
