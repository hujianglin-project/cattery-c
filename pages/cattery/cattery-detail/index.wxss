page {
  background: #fff;
}

.detail-content {
  height: calc(100vh - 628rpx);
  background: #fff;
  border-radius: 60rpx 60rpx 0rpx 0rpx;
  transform: translateY(-60rpx);
  box-sizing: border-box;
  padding: 40rpx 32rpx 0;
}

.cat-content {
  margin-top: 10rpx;
  overflow: auto;
  height: calc(100vh - 628rpx - 132rpx);
}

.status {
  position: absolute;
  top: 0;
  right: 0;
  width: 72rpx;
  height: 40rpx;
  background: #08ba6f;
  border-radius: 12rpx 0rpx 18rpx 12rpx;
  font-size: 22rpx;
  color: #ffffff;
  text-align: center;
  line-height: 40rpx;
}

.date {
  position: absolute;
  left: 0;
  bottom: 60rpx;
  width: 120rpx;
  height: 40rpx;
  background: rgba(57, 57, 57, 0.5);
  border-radius: 16rpx 16rpx 16rpx 16rpx;
  font-size: 20rpx;
  color: #ffffff;
  line-height: 40rpx;
  text-align: center;
}

.like {
  position: absolute;
  right: 12rpx;
  bottom: 60rpx;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 20rpx;
  color: #ffffff;
}

.name {
  font-size: 28rpx;
  color: #333333;
  line-height: 40rpx;
  text-align: center;
  margin-top: 20rpx;
}

.cat-choose {
  display: flex;
  margin-left: 22rpx;
  margin-top: 20rpx;
}

.nav-list {
  font-weight: 400;
  font-size: 32rpx;
  color: #bfbfbf;
  margin-right: 40rpx;
  height: 82rpx;
}

.nav-list.check {
  font-weight: 600;
  font-size: 32rpx;
  color: #333333;
  box-sizing: border-box;
}

.check-content {
  width: 50rpx;
  height: 10rpx;
  background: #ffe733;
  border-radius: 84rpx;
  margin: 10rpx auto 0;
}

.album-default-img {
  width: 340rpx;
  height: 300rpx;
  display: block;
  margin: 108rpx auto 2rpx;
}

.album-default-desc {
  font-size: 24rpx;
  color: #bfbfbf;
  text-align: center;
}

.album-content {
  padding: 10rpx 0rpx 100rpx;
  /* 经过4种方案实现对比，这个为最佳 */
  column-count: 2;
}

.empty {
  position: absolute;
  left: 50%;
  top: 20%;
  transform: translateX(-50%);
}
