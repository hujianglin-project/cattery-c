page {
  background: #fff;
}

.detail-content {
  height: calc(100vh - 628rpx);
  background: #fff;
  border-radius: 60rpx 60rpx 0rpx 0rpx;
  transform: translateY(-60rpx);
  box-sizing: border-box;
  padding: 40rpx 32rpx 0;
}

.cat-choose {
  display: flex;
}

.nav-list {
  font-weight: 400;
  font-size: 32rpx;
  color: #bfbfbf;
  margin-right: 40rpx;
  height: 82rpx;
}

.nav-list.check {
  font-weight: 600;
  font-size: 32rpx;
  color: #333333;
  box-sizing: border-box;
}

.check-content {
  width: 50rpx;
  height: 10rpx;
  background: #ffe733;
  border-radius: 84rpx;
  margin: 10rpx auto 0;
}

.cat-content {
  margin-top: 10rpx;
  overflow: auto;
  height: calc(100vh - 628rpx - 132rpx);
}

.cat-list {
  position: relative;
  margin: 0 38rpx 40rpx 0;
  display: inline-block;
}

.cat-list:nth-child(2n + 2) {
  margin-right: 0;
}
.img {
  width: 320rpx;
  height: auto;
  min-height: 320rpx;
}

.status {
  position: absolute;
  top: 0;
  right: 0;
  width: 72rpx;
  height: 40rpx;
  background: #08ba6f;
  border-radius: 12rpx 0rpx 18rpx 12rpx;
  font-size: 22rpx;
  color: #ffffff;
  text-align: center;
  line-height: 40rpx;
}

.date {
  position: absolute;
  left: 0;
  bottom: 60rpx;
  width: 120rpx;
  height: 40rpx;
  background: rgba(57, 57, 57, 0.5);
  border-radius: 16rpx 16rpx 16rpx 16rpx;
  font-size: 20rpx;
  color: #ffffff;
  line-height: 40rpx;
  text-align: center;
}

.like {
  position: absolute;
  right: 12rpx;
  bottom: 60rpx;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 20rpx;
  color: #ffffff;
}

.name {
  font-size: 28rpx;
  color: #333333;
  line-height: 40rpx;
  text-align: center;
  margin-top: 20rpx;
}
