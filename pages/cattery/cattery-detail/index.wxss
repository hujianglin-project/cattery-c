.album-content {
  padding: 10rpx 0rpx 100rpx;
  position: relative;
  display: flex;
  margin-bottom: 20rpx;
}

.fall-left {
  margin-right: 36rpx;
}

.add-album {
  width: 68rpx;
  height: 68rpx;
}

.cat-choose {
  display: flex;
  margin-left: 52rpx;
  margin-top: 30rpx;
}

.nav-list {
  font-weight: 400;
  font-size: 32rpx;
  color: #bfbfbf;
  margin-right: 40rpx;
  height: 82rpx;
}

.nav-list.check {
  font-weight: 600;
  font-size: 32rpx;
  color: #333333;
  box-sizing: border-box;
}

.check-content {
  width: 50rpx;
  height: 10rpx;
  background: #ffe733;
  border-radius: 84rpx;
  margin: 10rpx auto 0;
}

.album-default-img {
  width: 340rpx;
  height: 300rpx;
  display: block;
  margin: 108rpx auto 2rpx;
}

.album-default-desc {
  font-size: 24rpx;
  color: #bfbfbf;
  text-align: center;
}

.album-default-add {
  width: 180rpx;
  height: 64rpx;
  background: #ffe733;
  border-radius: 62rpx 62rpx 62rpx 62rpx;
  font-size: 32rpx;
  color: #333333;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 124rpx auto;
}

.picker {
  font-size: 26rpx;
  color: #333333;
  min-width: 150rpx;
  text-align: right;
}

.empty {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
}

.tips-bottom {
  margin-top: 40rpx;
  margin-bottom: 95rpx;
  padding: 10rpx;
  text-align: center;
  font-size: 26rpx;
  color: #999;
  width: 100%;
  box-sizing: border-box;
  position: absolute;
  left: 0;
  bottom: 145rpx;
}

.loading-more {
  display: inline-block;
  vertical-align: middle;
}
