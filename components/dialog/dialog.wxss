.weui-mask {
  position: fixed;
  z-index: 1000;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
}

.weui-dialog {
  position: fixed;
  z-index: 5000;
  width: 80%;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
  background-color: #fff;
  text-align: center;
  border-radius: 16rpx;
  overflow: hidden;
}

.weui-dialog.overflow {
  overflow: visible;
}

.weui-dialog__hd {
  padding: 1.3em 1.6em 0.5em;
}

.weui-dialog__title {
  font-weight: bold;
  font-size: 36rpx;
}

.weui-dialog__bd {
  padding: 0.8em 1.6em;
  min-height: 40px;
  font-size: 30rpx;
  line-height: 1.3;
  word-wrap: break-word;
  word-break: break-all;
  color: #222;
  text-align: left;
}

